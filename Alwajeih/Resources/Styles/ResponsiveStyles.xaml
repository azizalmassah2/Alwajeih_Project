<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- أحجام الخطوط المتجاوبة -->
  <System:Double x:Key="FontSize.Tiny" xmlns:System="clr-namespace:System;assembly=mscorlib">10</System:Double>
  <System:Double x:Key="FontSize.Small" xmlns:System="clr-namespace:System;assembly=mscorlib">12</System:Double>
  <System:Double x:Key="FontSize.Medium" xmlns:System="clr-namespace:System;assembly=mscorlib">14</System:Double>
  <System:Double x:Key="FontSize.Large" xmlns:System="clr-namespace:System;assembly=mscorlib">16</System:Double>
  <System:Double x:Key="FontSize.XLarge" xmlns:System="clr-namespace:System;assembly=mscorlib">20</System:Double>
  <System:Double x:Key="FontSize.XXLarge" xmlns:System="clr-namespace:System;assembly=mscorlib">24</System:Double>
  <System:Double x:Key="FontSize.Huge" xmlns:System="clr-namespace:System;assembly=mscorlib">32</System:Double>

  <!-- المسافات المتجاوبة -->
  <Thickness x:Key="Margin.Tiny">4</Thickness>
  <Thickness x:Key="Margin.Small">8</Thickness>
  <Thickness x:Key="Margin.Medium">12</Thickness>
  <Thickness x:Key="Margin.Large">16</Thickness>
  <Thickness x:Key="Margin.XLarge">20</Thickness>
  <Thickness x:Key="Margin.XXLarge">24</Thickness>
  <Thickness x:Key="Margin.Huge">32</Thickness>

  <Thickness x:Key="Padding.Tiny">4</Thickness>
  <Thickness x:Key="Padding.Small">8</Thickness>
  <Thickness x:Key="Padding.Medium">12</Thickness>
  <Thickness x:Key="Padding.Large">16</Thickness>
  <Thickness x:Key="Padding.XLarge">20</Thickness>
  <Thickness x:Key="Padding.XXLarge">24</Thickness>

  <!-- عرض الأعمدة المتجاوب -->
  <System:Double x:Key="ColumnWidth.Narrow" xmlns:System="clr-namespace:System;assembly=mscorlib">200</System:Double>
  <System:Double x:Key="ColumnWidth.Medium" xmlns:System="clr-namespace:System;assembly=mscorlib">250</System:Double>
  <System:Double x:Key="ColumnWidth.Wide" xmlns:System="clr-namespace:System;assembly=mscorlib">300</System:Double>

  <!-- نمط Grid متجاوب -->
  <Style x:Key="ResponsiveGrid" TargetType="Grid">
    <Setter Property="Margin" Value="{StaticResource Margin.Large}"/>
  </Style>

  <!-- نمط StackPanel متجاوب -->
  <Style x:Key="ResponsiveStackPanel" TargetType="StackPanel">
    <Setter Property="Margin" Value="{StaticResource Margin.Medium}"/>
  </Style>

  <!-- نمط Border متجاوب (للكروت) -->
  <Style x:Key="ResponsiveCard" TargetType="Border">
    <Setter Property="Background" Value="White"/>
    <Setter Property="CornerRadius" Value="12"/>
    <Setter Property="Padding" Value="{StaticResource Padding.Large}"/>
    <Setter Property="Margin" Value="{StaticResource Margin.Medium}"/>
    <Setter Property="Effect">
      <Setter.Value>
        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.08"/>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- نمط TextBlock للعناوين الرئيسية -->
  <Style x:Key="ResponsiveTitle" TargetType="TextBlock">
    <Setter Property="FontSize" Value="{StaticResource FontSize.XXLarge}"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Foreground" Value="#1E293B"/>
    <Setter Property="Margin" Value="{StaticResource Margin.Medium}"/>
  </Style>

  <!-- نمط TextBlock للعناوين الفرعية -->
  <Style x:Key="ResponsiveSubtitle" TargetType="TextBlock">
    <Setter Property="FontSize" Value="{StaticResource FontSize.Large}"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="#475569"/>
    <Setter Property="Margin" Value="{StaticResource Margin.Small}"/>
  </Style>

  <!-- نمط TextBlock للنصوص العادية -->
  <Style x:Key="ResponsiveText" TargetType="TextBlock">
    <Setter Property="FontSize" Value="{StaticResource FontSize.Medium}"/>
    <Setter Property="Foreground" Value="#64748B"/>
    <Setter Property="TextWrapping" Value="Wrap"/>
  </Style>

  <!-- نمط Button متجاوب -->
  <Style x:Key="ResponsiveButton" TargetType="Button">
    <Setter Property="FontSize" Value="{StaticResource FontSize.Medium}"/>
    <Setter Property="Padding" Value="{StaticResource Padding.Medium}"/>
    <Setter Property="Margin" Value="{StaticResource Margin.Small}"/>
    <Setter Property="MinWidth" Value="100"/>
    <Setter Property="MinHeight" Value="36"/>
    <Setter Property="Cursor" Value="Hand"/>
  </Style>

  <!-- نمط TextBox متجاوب -->
  <Style x:Key="ResponsiveTextBox" TargetType="TextBox">
    <Setter Property="FontSize" Value="{StaticResource FontSize.Medium}"/>
    <Setter Property="Padding" Value="{StaticResource Padding.Medium}"/>
    <Setter Property="Margin" Value="{StaticResource Margin.Small}"/>
    <Setter Property="MinHeight" Value="36"/>
  </Style>

  <!-- نمط ComboBox متجاوب -->
  <Style x:Key="ResponsiveComboBox" TargetType="ComboBox">
    <Setter Property="FontSize" Value="{StaticResource FontSize.Medium}"/>
    <Setter Property="Padding" Value="{StaticResource Padding.Medium}"/>
    <Setter Property="Margin" Value="{StaticResource Margin.Small}"/>
    <Setter Property="MinHeight" Value="36"/>
  </Style>

  <!-- نمط DataGrid متجاوب -->
  <Style x:Key="ResponsiveDataGrid" TargetType="DataGrid">
    <Setter Property="FontSize" Value="{StaticResource FontSize.Medium}"/>
    <Setter Property="RowHeight" Value="40"/>
    <Setter Property="ColumnHeaderHeight" Value="44"/>
    <Setter Property="AutoGenerateColumns" Value="False"/>
    <Setter Property="IsReadOnly" Value="True"/>
    <Setter Property="SelectionMode" Value="Single"/>
    <Setter Property="GridLinesVisibility" Value="None"/>
    <Setter Property="HeadersVisibility" Value="Column"/>
    <Setter Property="CanUserResizeRows" Value="False"/>
    <Setter Property="CanUserAddRows" Value="False"/>
    <Setter Property="AlternatingRowBackground" Value="#F8FAFC"/>
    <Setter Property="Background" Value="White"/>
    <Setter Property="BorderThickness" Value="0"/>
  </Style>

  <!-- نمط ScrollViewer متجاوب -->
  <Style x:Key="ResponsiveScrollViewer" TargetType="ScrollViewer">
    <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
    <Setter Property="Padding" Value="{StaticResource Padding.Small}"/>
  </Style>

  <!-- نمط للكروت الإحصائية -->
  <Style x:Key="StatCard" TargetType="Border" BasedOn="{StaticResource ResponsiveCard}">
    <Setter Property="MinWidth" Value="200"/>
    <Setter Property="MinHeight" Value="120"/>
  </Style>

  <!-- نمط للنماذج (Forms) -->
  <Style x:Key="FormContainer" TargetType="StackPanel">
    <Setter Property="Margin" Value="{StaticResource Margin.Large}"/>
    <Setter Property="MaxWidth" Value="600"/>
  </Style>

  <!-- نمط Label للنماذج -->
  <Style x:Key="FormLabel" TargetType="TextBlock">
    <Setter Property="FontSize" Value="{StaticResource FontSize.Medium}"/>
    <Setter Property="FontWeight" Value="Medium"/>
    <Setter Property="Foreground" Value="#475569"/>
    <Setter Property="Margin" Value="0,8,0,4"/>
  </Style>

  <!-- نمط للأيقونات -->
  <Style x:Key="IconText" TargetType="TextBlock">
    <Setter Property="FontSize" Value="{StaticResource FontSize.XLarge}"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="Margin" Value="0,0,8,0"/>
  </Style>

  <!-- نمط للأيقونات الكبيرة -->
  <Style x:Key="LargeIcon" TargetType="TextBlock">
    <Setter Property="FontSize" Value="{StaticResource FontSize.Huge}"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
  </Style>

  <!-- نمط WrapPanel متجاوب للكروت -->
  <Style x:Key="ResponsiveWrapPanel" TargetType="WrapPanel">
    <Setter Property="Orientation" Value="Horizontal"/>
    <Setter Property="Margin" Value="{StaticResource Margin.Medium}"/>
  </Style>

  <!-- نمط UniformGrid متجاوب -->
  <Style x:Key="ResponsiveUniformGrid" TargetType="UniformGrid">
    <Setter Property="Margin" Value="{StaticResource Margin.Medium}"/>
  </Style>

  <!-- نمط Separator متجاوب -->
  <Style x:Key="ResponsiveSeparator" TargetType="Separator">
    <Setter Property="Margin" Value="{StaticResource Margin.Large}"/>
    <Setter Property="Background" Value="#E2E8F0"/>
    <Setter Property="Height" Value="1"/>
  </Style>

  <!-- نمط للرسائل (Alerts) -->
  <Style x:Key="AlertBox" TargetType="Border">
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="Padding" Value="{StaticResource Padding.Medium}"/>
    <Setter Property="Margin" Value="{StaticResource Margin.Medium}"/>
    <Setter Property="BorderThickness" Value="1"/>
  </Style>

  <!-- نمط رسالة نجاح -->
  <Style x:Key="SuccessAlert" TargetType="Border" BasedOn="{StaticResource AlertBox}">
    <Setter Property="Background" Value="#ECFDF5"/>
    <Setter Property="BorderBrush" Value="#10B981"/>
  </Style>

  <!-- نمط رسالة خطأ -->
  <Style x:Key="ErrorAlert" TargetType="Border" BasedOn="{StaticResource AlertBox}">
    <Setter Property="Background" Value="#FEF2F2"/>
    <Setter Property="BorderBrush" Value="#EF4444"/>
  </Style>

  <!-- نمط رسالة تحذير -->
  <Style x:Key="WarningAlert" TargetType="Border" BasedOn="{StaticResource AlertBox}">
    <Setter Property="Background" Value="#FFFBEB"/>
    <Setter Property="BorderBrush" Value="#F59E0B"/>
  </Style>

  <!-- نمط رسالة معلومات -->
  <Style x:Key="InfoAlert" TargetType="Border" BasedOn="{StaticResource AlertBox}">
    <Setter Property="Background" Value="#EFF6FF"/>
    <Setter Property="BorderBrush" Value="#3B82F6"/>
  </Style>

</ResourceDictionary>
